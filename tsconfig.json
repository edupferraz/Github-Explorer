{
  "compilerOptions": {
    
    "target": "es2016",                                  
    "lib": ["dom", "dom.iterable", "esnext"],                                        
    "jsx": "react-jsx",                                
    
    "module": "commonjs",
    "resolveJsonModule": true,
    "isolatedModules": true,                                
    "moduleResolution": "node",                       

    "allowJs": true,                                 
    "noEmit": true,                                   
    "allowSyntheticDefaultImports": true,              
    "esModuleInterop": true,                            
    "forceConsistentCasingInFileNames": true,            
    "strict": true,                                      
    "skipLibCheck": true                             
  }
}
